</head>
<body>
<header>
    <nav>
        <ul>
            <li><a href="/pets">Pets</a></li>
            <li><a href="/slots">Slots</a></li>
            <li><a href="/home">Complaints</a></li>
            <li><a href="/profile">Profile</a></li>
            <li>
                <form action="/logout?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit">Log Out</button>
                </form>
            </li>
        </ul>
    </nav>
</header>

<!-- Add modal HTML structure -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <form id="editForm">
            <label for="number">Number:</label>
            <input type="text" id="number" name="number" >
            <span class="error-message"></span>
            <label for="type">Type:</label>
            <input type="text" id="type" name="type">
            <span class="error-message"></span>
            <label for="cleanSchedule">Clean Schedule:</label>
            <input type="text" id="cleanSchedule" name="cleanSchedule">
            <span class="error-message"></span>
            <label for="status">Status:</label>
            <input type="text" id="status" name="status">
            <span class="error-message"></span>
            <label for="idPet">Pet ID:</label>
            <input type="text" id="idPet" name="idPet" >
            <span class="error-message"></span>
            <div class="modal-buttons">
                <button type="button" class="close-button close-modal">Close</button>
                <input type="submit" value="Save" class="close-modal button">
            </div>

        </form>
    </div>
</div>



<div id="room"></div>

<script src="./js/slots.js" defer></script>
</body>
</html>
